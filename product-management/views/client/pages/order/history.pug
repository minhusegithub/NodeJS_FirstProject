extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-3 
        .row 
            .col-12 
                +box-head("Lịch sử đặt hàng")

        .row 
            .col-12 
                table(class="table table-bordered table-hover")
                    thead 
                        tr 
                            th STT
                            th Ảnh
                            th Tên sản phẩm
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Ngày đặt hàng
                    tbody 
                        each item, index in orders
                            - const rowSpan = item.products.length
                            each product, productIndex in item.products
                                tr 
                                    if productIndex === 0
                                        td(rowspan=rowSpan) #{index + 1}
                                    td
                                        img(
                                            src=product.thumbnail
                                            alt=product.title
                                            width="80px"
                                            height="80px"
                                            style="object-fit: cover;"
                                        )
                                    td #{product.title}
                                    td #{product.priceNew}$
                                    td #{product.quantity}
                                    if productIndex === 0
                                        td(rowspan=rowSpan) #{item.totalPrice}$
                                        td(rowspan=rowSpan) #{moment(item.createdAt).format('DD/MM/YYYY')}





