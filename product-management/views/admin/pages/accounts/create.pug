extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main  
    .container.py-4
        .row.justify-content-center
            .col-lg-8.col-md-10
                .card.shadow-sm
                    .card-header.bg-primary.text-white
                        h1(class="h3 mb-0")
                            i(class="fas fa-user-plus me-2")
                            |       Thêm mới tài khoản
                    
                    .card-body
                        +alert-error(5000)

                        form(
                            action=`${prefixAdmin}/accounts/create`
                            method="POST"
                            enctype="multipart/form-data"
                        )
                            .mb-3
                                label(for="fullName" class="form-label") 
                                    i(class="fas fa-user me-1")
                                    | Họ tên *
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    placeholder="Nhập họ tên đầy đủ"
                                    required 
                                )
                            
                            .mb-3
                                label(for="email" class="form-label")
                                    i(class="fas fa-envelope me-1") 
                                    | Email *
                                input(
                                    type="email"
                                    class="form-control"
                                    id="email"                
                                    name="email"
                                    placeholder="example@domain.com"
                                    required
                                )   
                            
                            .mb-3
                                label(for="password" class="form-label")
                                    i(class="fas fa-lock me-1")
                                    | Mật khẩu *
                                .input-group
                                    input(
                                        type="password"
                                        class="form-control"
                                        id="password"
                                        name="password"
                                        required 
                                    )
                                    
                            
                            .mb-3
                                label(for="phone" class="form-label")
                                    i(class="fas fa-phone me-1")
                                    | Số điện thoại
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"                
                                    name="phone"
                                    placeholder="Nhập số điện thoại"
                                ) 
                            
                            div(
                                class= "form-group"
                                upload-image 
                            )  
                                label(for="avatar") Avatar
                                input(
                                    type= "file"
                                    class= "form-control-file"
                                    id="avatar"                
                                    name="avatar"
                                    accept= "image/*"
                                    upload-image-input
                                )
                                img(
                                    src=""
                                    class="image-preview"
                                    upload-image-preview
                                )

                            .mb-3
                                label(for="role_id" class="form-label")
                                    i(class="fas fa-user-shield me-1")
                                    | Phân quyền 
                                select(name="role_id" id="role_id" class="form-select")
                                    option(selected disabled) --Chọn quyền-- 
                                    each item in roles      
                                        option(value=item.id) #{item.title}
                            
                            .mb-3
                                label(class="form-label d-block")
                                    i(class="fas fa-toggle-on me-1")
                                    | Trạng thái
                                .form-check.form-check-inline
                                    input(
                                        type="radio"
                                        class="form-check-input"
                                        id="statusActive"
                                        name="status"
                                        value="active"
                                        checked
                                    )     
                                    label(for="statusActive" class="form-check-label")
                                        i(class="fas fa-check-circle text-success me-1")
                                        | Hoạt động
                                
                                .form-check.form-check-inline
                                    input(
                                        type="radio"
                                        class="form-check-input"
                                        id="statusInactive"
                                        name="status"
                                        value="inactive"
                                    )     
                                    label(for="statusInactive" class="form-check-label")
                                        i(class="fas fa-times-circle text-danger me-1")
                                        | Dừng hoạt động

                            .d-grid.gap-2.d-md-flex.justify-content-md-end.mt-4
                                a(href=`${prefixAdmin}/accounts` class="btn btn-secondary me-md-2")
                                    i(class="fas fa-arrow-left me-1")
                                    | Quay lại
                                button(
                                    type="submit"
                                    class="btn btn-primary"
                                )
                                    i(class="fas fa-save me-1")
                                    | Tạo mới

