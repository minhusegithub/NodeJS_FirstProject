extends ../../layouts/default.pug

include ../../mixins/table-tree.pug
include ../../mixins/moment.pug

block main   
  if role.permissions.includes("products-category_view")
    .container.mt-4
      h2.mb-4.text-center
        i.bi.bi-box-seam-fill.mr-2
        | Danh mục sản phẩm

      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center
          span.font-weight-bold
            i.bi.bi-list-ul.mr-2
            | Danh sách danh mục
          if role.permissions.includes("products-category_create")
            a.btn.btn-success.btn-sm(href=`${prefixAdmin}/products-category/create`)
              i.bi.bi-plus-circle.mr-1
              | Thêm mới

        .card-body.p-0
          table.table.table-hover.table-bordered.mb-0(checkbox-multi)
            thead.thead-light
              tr.text-center
                th 
                  input(type="checkbox" name="checkall")
                th(style="width: 50px") STT
                th Hình ảnh
                th Tiêu đề    
                th Vị trí      
                th Trạng thái   
                th Người cập nhật   
                th Hành động

            tbody
              +table-tree(records)

    // Form xóa
    form(
      action=""
      method="POST"
      id="form-delete-category"
      data-path=`${prefixAdmin}/products-category/delete`
    )

    script(src="/admin/js/products-category.js")
