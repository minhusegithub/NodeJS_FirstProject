extend ../../layouts/default.pug

block main  
    .container.py-5
        .row.justify-content-center
            .col-lg-8.col-md-10
                .card.border-0.shadow-lg.rounded-4.overflow-hidden
                    .card-header.bg-gradient-primary.text-white.py-4
                        .d-flex.align-items-center
                            .icon-circle.bg-white.text-primary.rounded-circle.p-3.me-3
                                i(class="fas fa-user-shield fa-2x")
                            div
                                h1(class="h3 mb-0 fw-bold") Chi tiết nhóm quyền
                                p(class="text-white-50 mb-0") Thông tin chi tiết về nhóm quyền
                    
                    .card-body.p-4.bg-light
                        .row.g-4
                            .col-12
                                .card.border-0.shadow-sm
                                    .card-body
                                        .d-flex.align-items-center.mb-3
                                            i(class="fas fa-heading text-primary me-2")
                                            h5(class="mb-0") Nhóm quyền
                                        if(data.title)
                                            p(class="mb-0 text-muted") #{data.title}
                            
                            .col-12
                                .card.border-0.shadow-sm
                                    .card-body
                                        .d-flex.align-items-center.mb-3
                                            i(class="fas fa-info-circle text-primary me-2")
                                            h5(class="mb-0") Mô tả
                                        if(data.description)
                                            p(class="mb-0 text-muted") !{data.description}
                            
                            .col-12
                                .card.border-0.shadow-sm
                                    .card-body
                                        .d-flex.align-items-center.mb-3
                                            i(class="fas fa-key text-primary me-2")
                                            h5(class="mb-0") Các quyền khả thi
                                        if(data.permissions)
                                            .d-flex.flex-wrap.gap-2
                                                each permission in data.permissions
                                                    span(class="badge bg-primary p-2")
                                                        i(class="fas fa-check-circle me-1")
                                                        | #{permission}

                        .d-grid.gap-3.d-md-flex.justify-content-md-end.mt-5
                            a(href=`${prefixAdmin}/roles` class="btn btn-outline-secondary btn-lg me-md-2")
                                i(class="fas fa-arrow-left me-2")
                                | Quay lại
                            a(
                                href=`${prefixAdmin}/roles/edit/${data.id}`
                                class="btn btn-primary btn-lg px-4"
                            )
                                i(class="fas fa-edit me-2")
                                | Chỉnh sửa
    style.
        .bg-gradient-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        }
        .icon-circle {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            transition: all 0.3s ease;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .btn {
            transition: all 0.3s ease;
        }
        .btn:hover {
            transform: translateY(-1px);
        }
        .badge {
            transition: all 0.3s ease;
        }
        .badge:hover {
            transform: scale(1.05);
        }


